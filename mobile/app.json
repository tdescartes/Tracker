{
  "expo": {
    "name": "Tracker",
    "slug": "tracker-app",
    "version": "1.0.0",
    "scheme": "tracker",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#006994"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tracker.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Tracker needs camera access to scan receipts.",
        "NSPhotoLibraryUsageDescription": "Tracker needs photo library access to pick receipt images.",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "package": "com.tracker.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#006994"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-image-picker",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#006994",
          "sounds": ["./assets/notification-sound.wav"],
          "mode": "production"
        }
      ],
      "expo-device"
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
