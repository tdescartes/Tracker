DATABASE_URL=postgresql+asyncpg://tracker_user:your_password@localhost:5432/tracker_db
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ── OCR / AI ──────────────────────────────────────
# PaddleOCR runs locally on CPU (no API key needed)
USE_PADDLEOCR=true

# Gemini for receipt & bank statement structuring
# Get a free key at https://aistudio.google.com/apikey
GEMINI_API_KEY=
GEMINI_API_MODEL=gemini-2.0-flash

# ── Storage ───────────────────────────────────────
# Local disk for dev; set S3_* for production
USE_LOCAL_STORAGE=true
LOCAL_UPLOAD_DIR=./uploads
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=tracker

# ── General ───────────────────────────────────────
APP_NAME=Tracker
DEBUG=true
FRONTEND_ORIGIN=http://localhost:3000
MOBILE_ORIGIN=http://localhost:8081

# ── Recipe suggestions ────────────────────────────
# Optional — falls back to built-in recipes if not set
SPOONACULAR_API_KEY=

# ── Plaid live bank integration ───────────────────
# Get credentials at https://dashboard.plaid.com/
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox
